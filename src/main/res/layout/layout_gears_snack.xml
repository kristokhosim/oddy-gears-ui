<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_gears_snack_success"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/ivSnackIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_snack_check"
            tools:ignore="ContentDescription" />

        <com.oddy.gearsui.GearsTextView
            android:id="@+id/gtvSnackMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            app:size="lowSpeed16"
            tools:text="Email berhasil diverifikasi" />

    </LinearLayout>
</FrameLayout>