<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/bg_gears_button_disabled" android:state_enabled="false" />
    <item>
        <ripple android:color="@color/black_500">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/gears_button_corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="@dimen/gears_button_corner_radius" />
                    <stroke
                        android:width="@dimen/gears_button_border_size"
                        android:color="@color/teal" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>